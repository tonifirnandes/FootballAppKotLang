<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardContainer"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/medium_space_size"
        app:elevation="@dimen/small_space_size">

        <RelativeLayout
                android:orientation="vertical"
                android:layout_margin="@dimen/medium_space_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_schedule_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    tools:text="28 September 2018"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimary"/>

            <RelativeLayout
                    android:id="@+id/rl_match_schedule_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_schedule_date">

                <TextView
                        android:id="@+id/tv_hometeam_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:gravity="center"
                        android:layout_toLeftOf="@+id/ll_match_score"
                        android:layout_toStartOf="@+id/ll_match_score"
                        android:layout_centerVertical="true"
                        android:maxLines="2"
                        android:ellipsize="end"
                        tools:text="Real Madrid"/>

                <LinearLayout
                        android:id="@+id/ll_match_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/medium_space_size"
                        android:layout_centerHorizontal="true">

                    <TextView
                            android:id="@+id/tv_hometeam_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            style="@style/TextAppearance.AppCompat.Large"
                            tools:text=""/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.AppCompat.Caption"
                            android:gravity="center"
                            android:text="@string/str_versus"
                            android:layout_marginLeft="@dimen/small_space_size"
                            android:layout_marginRight="@dimen/small_space_size"/>

                    <TextView
                            android:id="@+id/tv_awayteam_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.AppCompat.Large"
                            android:gravity="center"
                            tools:text=""/>


                </LinearLayout>

                <TextView
                        android:id="@+id/tv_awayteam_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/ll_match_score"
                        android:layout_toEndOf="@+id/ll_match_score"
                        android:layout_centerVertical="true"
                        android:maxLines="2"
                        android:ellipsize="end"
                        tools:text="Real"/>

            </RelativeLayout>
        </RelativeLayout>

</android.support.v7.widget.CardView>