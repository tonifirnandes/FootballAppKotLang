<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        android:id="@+id/cl_root_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/team_collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginStart="@dimen/collapsing_expanding_title_start_margin_size"
                app:expandedTitleMarginEnd="@dimen/collapsing_expanding_title_end_margin_size"
                android:fitsSystemWindows="true">

            <LinearLayout
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax"
                    android:fitsSystemWindows="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        tools:src="@drawable/ic_launcher_background"
                        android:layout_margin="@dimen/medium_space_size"
                        android:layout_gravity="center"
                        android:id="@+id/iv_team_logo"
                        android:layout_width="@dimen/detail_club_logo_size"
                        android:layout_height="@dimen/detail_club_logo_size"
                />

                <TextView
                        android:layout_margin="@dimen/small_space_size"
                        android:textColor="@color/white"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_gravity="center"
                        tools:text="Arsenal"
                        android:id="@+id/tv_team_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:layout_margin="@dimen/small_space_size"
                        android:textColor="@color/white"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_gravity="center"
                        tools:text="1899"
                        android:id="@+id/tv_team_established_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:layout_marginTop="@dimen/small_space_size"
                        android:layout_marginBottom="@dimen/medium_space_size"
                        android:textColor="@color/white"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_gravity="center"
                        tools:text="Camp Nou"
                        android:id="@+id/tv_team_stadium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

        <android.support.design.widget.TabLayout
                android:visibility="gone"
                android:id="@+id/tl_team_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMode="fixed"
                app:tabGravity="fill">
        </android.support.design.widget.TabLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
            android:visibility="gone"
            android:id="@+id/vp_team_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/pb_loading_team_detail_activity_action"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</android.support.design.widget.CoordinatorLayout>