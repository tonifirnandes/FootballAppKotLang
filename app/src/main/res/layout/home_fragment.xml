<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/home_view_root"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

    <android.support.design.widget.TabLayout
            android:id="@+id/tabs_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_selected_league"
            android:layout_below="@+id/tabs_main"/>

    <ProgressBar
            android:layout_centerInParent="true"
            android:id="@+id/pb_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:visibility="gone"
            android:id="@+id/btn_selected_league"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/normal_space_size"
            android:padding="@dimen/medium_space_size"
            android:textColor="@color/white"
            app:backgroundTint="@color/colorPrimary"
            android:text = "@string/str_get_allleagues_loading"/>

</RelativeLayout>