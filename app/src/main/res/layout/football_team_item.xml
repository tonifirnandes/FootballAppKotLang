<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardContainer"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/medium_space_size"
        app:elevation="@dimen/small_space_size">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="@dimen/medium_space_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/iv_team_logo"
                android:layout_width="@dimen/team_list_club_logo_size"
                android:layout_height="@dimen/team_list_club_logo_size"
                android:gravity="center"
                tools:src="@drawable/ic_launcher_background"/>

        <TextView
                android:id="@+id/tv_team_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_gravity="center_vertical"
                android:text="@string/str_versus"
                android:layout_marginLeft="@dimen/normal_space_size"
                android:layout_marginRight="@dimen/normal_space_size"/>

    </LinearLayout>

</android.support.v7.widget.CardView>