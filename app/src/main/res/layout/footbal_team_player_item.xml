<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardContainer"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="@dimen/small_space_size">

    <LinearLayout
            android:weightSum="1"
            android:orientation="horizontal"
            android:padding="@dimen/medium_space_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_marginEnd="@dimen/small_space_size"
                android:layout_marginRight="@dimen/small_space_size"
                android:layout_gravity="center"
                android:id="@+id/iv_player_logo"
                android:layout_width="@dimen/team_list_club_logo_size"
                android:layout_height="@dimen/team_list_club_logo_size"
                tools:src="@drawable/ic_launcher_background"/>

        <TextView
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_weight="0.5"
                android:layout_marginEnd="@dimen/small_space_size"
                android:layout_gravity="center"
                android:id="@+id/tv_player_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Body2"
                tools:text="@string/str_nav_favorite"
                android:layout_marginLeft="@dimen/normal_space_size"
                android:layout_marginRight="@dimen/normal_space_size"/>

        <TextView
                android:layout_weight="0.5"
                android:id="@+id/tv_player_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_gravity="center"
                android:gravity="right"
                tools:text="@string/str_versus"/>

    </LinearLayout>

</android.support.v7.widget.CardView>